<%- include ../partials/header.ejs %>

<!-- Content for the Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= tournament._id %>"
                    >
                    <label for="tournamentTextField">Tournament Name</label>
                    <input type="text" class="form-control"
                        id="tournamentTextField"
                        placeholder="Enter the tournament Name"
                        name="Name" 
                        value="<%= tournament.Name %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="tournamentTextField">Description</label>
                    <input type="text" class="form-control"
                        id="tournamentTextField"
                        placeholder="Enter the tournament Description"
                        name="Description" 
                        value="<%= tournament.Description %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="statusTextField">Players</label>
                    <input type="number" class="form-control"
                    id="statusTextField"
                    placeholder="Enter the number of players"
                    name="Players" 
                    value="<%= tournament.Players %>"
                    >
                </div>
                <br />
                <div class="form-group">
                    <label for="tournamentTextField">Tournament type</label>
                    <input type="text" class="form-control"
                        id="tournamentTextField"
                        placeholder="Enter the tournament type"
                        name="Type" 
                        value="<%= tournament.Type %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="tournamentTextField">Tournament Tier</label>
                    <input type="number" class="form-control"
                        id="tournamentTextField"
                        placeholder="Enter the tournament tier"
                        name="Tier" 
                        value="<%= tournament.Tier %>"
                        required>
                </div>
                <br />

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> 
                    Submit
                </button>
                
                <a href="/tournament/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>

            </form>
        </div>

    </div>
</div>

<%- include ../partials/footer.ejs %>